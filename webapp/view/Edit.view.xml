<mvc:View
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    height="100%"
    controllerName="myapp.ui5.controller.Edit"
>
    <uxap:ObjectPageLayout
        id="createObjectPageLayout"
        enableLazyLoading="true"
        useIconTabBar="true"
        showTitleInHeaderContent="true"
        upperCaseAnchorBar="false"
        showFooter="true"
        busy="{view>/busy}"
        busyIndicatorDelay="{view>delay}"
    >
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:expandedHeading>
                    <Title
                        text="Edit Leave Request"
                        wrapping="true"
                    />
                </uxap:expandedHeading>

                <uxap:snappedHeading>
                    <Title
                        text="Edit Leave Request"
                        wrapping="true"
                    />
                </uxap:snappedHeading>

                <uxap:actions>
                    <Button
                        type="Back"
                        text="Back to Work List"
                        press="onBackToWorkList"
                    />
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>

        <uxap:headerContent>
            <HeaderContainer
                id="headerContent"
                showDividers="false"
            >
                <VBox>
                    <Title
                        text="Thông tin người tạo"
                        class="sapUiTinyMarginBottom"
                    />
                    <HBox class="sapUiTinyMarginBottom">
                        <ObjectStatus
                            title="User Name"
                            text="{section>/EmployeeId}"
                        />
                    </HBox>
                    <HBox class="sapUiTinyMarginBottom">
                        <ObjectStatus
                            title="Full Name"
                            text="{section>/CreatedBy}"
                        />
                    </HBox>
                    <HBox>
                        <ObjectStatus
                            title="Created On"
                            text="{
                              path: 'section>/CreatedOn',
                              formatter: '.formatter.formatDate'
                            }"
                        />
                    </HBox>
                </VBox>
                <VBox>
                    <Title
                        text="Thông tin Process"
                        class="sapUiTinyMarginBottom"
                    />
                    <VBox>
                        <ObjectStatus
                            title="Trạng thái"
                            text="{section>/Status}"
                            inverted="true"
                            state="{
                              path: 'section>/Status',
                              formatter: '.formatter.formatStatus'
                            }"
                        />
                    </VBox>
                </VBox>
            </HeaderContainer>
        </uxap:headerContent>

        <uxap:sections>
            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Leave Request"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        titleUppercase="false"
                        title="Leave Request"
                    >
                        <uxap:blocks>
                            <VBox>
                                <form:Form
                                    id="form"
                                    editable="true"
                                    binding="{form>/}"
                                >
                                    <form:title />
                                    <form:layout>
                                        <form:ResponsiveGridLayout
                                            labelSpanXL="3"
                                            labelSpanL="3"
                                            labelSpanM="3"
                                            labelSpanS="12"
                                            adjustLabelSpan="false"
                                            emptySpanXL="4"
                                            emptySpanL="4"
                                            emptySpanM="4"
                                            emptySpanS="0"
                                            columnsXL="1"
                                            columnsL="1"
                                            columnsM="1"
                                            singleContainerFullSize="false"
                                        />
                                    </form:layout>
                                    <form:formContainers>
                                        <form:FormContainer>
                                            <form:formElements>
                                                <form:FormElement>
                                                    <form:label>
                                                        <Label
                                                            text="Loại phép"
                                                            required="false"
                                                        />
                                                    </form:label>
                                                    <form:fields>
                                                        <Select
                                                            id="LeaveType"
                                                            required="true"
                                                            selectedKey="{form>LeaveType}"
                                                            forceSelection="false"
                                                            change="onChangeValue"
                                                            fieldGroupIds="FormField"
                                                        >
                                                            <items>
                                                                <core:Item
                                                                    text="Nghỉ phép năm"
                                                                    key="Nghỉ phép năm"
                                                                />
                                                                <core:Item
                                                                    text="Ốm"
                                                                    key="Ốm"
                                                                />
                                                                <core:Item
                                                                    text="Khác"
                                                                    key="Khác"
                                                                />
                                                            </items>
                                                        </Select>
                                                    </form:fields>
                                                </form:FormElement>

                                                <form:FormElement>
                                                    <form:label>
                                                        <Label
                                                            text="Ngày bắt đầu"
                                                            required="false"
                                                        />
                                                    </form:label>
                                                    <form:fields>
                                                        <DatePicker
                                                            id="StartDate"
                                                            required="true"
                                                            value="{form>StartDate}"
                                                            displayFormat="dd.MM.yyyy"
                                                            valueFormat="yyyyMMdd"
                                                            change="onChangeValue"
                                                            fieldGroupIds="FormField"
                                                        />
                                                    </form:fields>
                                                </form:FormElement>

                                                <form:FormElement>
                                                    <form:label>
                                                        <Label
                                                            text="Ngày kết thúc"
                                                            required="false"
                                                        />
                                                    </form:label>
                                                    <form:fields>
                                                        <DatePicker
                                                            id="EndDate"
                                                            required="true"
                                                            value="{form>EndDate}"
                                                            displayFormat="dd.MM.yyyy"
                                                            valueFormat="yyyyMMdd"
                                                            change="onChangeValue"
                                                            fieldGroupIds="FormField"
                                                        />
                                                    </form:fields>
                                                </form:FormElement>

                                                <form:FormElement>
                                                    <form:label>
                                                        <Label
                                                            text="Lý do xin nghỉ"
                                                            required="false"
                                                        />
                                                    </form:label>
                                                    <form:fields>
                                                        <TextArea
                                                            id="Reason"
                                                            required="true"
                                                            value="{form>Reason}"
                                                            rows="1"
                                                            growing="true"
                                                            growingMaxLines="3"
                                                            maxLength="255"
                                                            change="onChangeValue"
                                                            fieldGroupIds="FormField"
                                                        />
                                                    </form:fields>
                                                </form:FormElement>
                                            </form:formElements>
                                        </form:FormContainer>
                                    </form:formContainers>
                                </form:Form>
                            </VBox>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
        <uxap:footer>
            <OverflowToolbar id="footer">
                <ToolbarSpacer />
                <Button
                    text="Save Draft"
                    type="Ghost"
                    icon="sap-icon://save"
                    press="onSaveDraftProcess"
                />
                <Button
                    text="Send"
                    type="Emphasized"
                    icon="sap-icon://paper-plane"
                    press="onSubmitProcess"
                    enabled="{view>/canSubmit}"
                />
            </OverflowToolbar>
        </uxap:footer>
    </uxap:ObjectPageLayout>
</mvc:View>
